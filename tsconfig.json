{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",
    "types": ["bun-types"],
    "allowSyntheticDefaultImports": true
  },

  "lib": ["ESNext"],

  "moduleResolution": "bundler",
  "moduleDetection": "force",
  "allowImportingTsExtensions": true,
  "noEmit": true,

  "jsx": "react-jsx",
  "allowJs": false,

  "composite": true,
  "strict": true,
  "downlevelIteration": true,
  "skipLibCheck": true,
  "allowSyntheticDefaultImports": true,
  "forceConsistentCasingInFileNames": true,

  "types": [
    "bun-types"
  ]
}

